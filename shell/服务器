while [ 1 ];do sar -n DEV 1 1|egrep -v "lo|Average|txkB|Linux"|awk '{if ($7!=null)print $3,"进带宽:",$6*8/1024,"Mb/s  出带宽:"$7*8/1024,"Mb/s"}';ss -s|head -2|tail -1|awk "-F(" '{print $2}'|awk "-F)" '{print $1}'|awk '{print $2,$4,$10}'|awk "-F," '{print "连接数  ESTAB:"$1,"CLOSED:"$2,"TIMEWAIT:"$3}';uptime|awk "-F:" '{print "负载:"$NF}';mpstat |tail -1|awk '{print "CPU 用户:"$4"%  系统:"$6"%  IO:"$7"%  软中断:"$9"%  空闲:"$NF"%"}';free -m|grep buffers|tail -1|awk '{print "内存 使用:"$(NF-1),"MB  空闲:"$NF,"MB"}';echo '';done